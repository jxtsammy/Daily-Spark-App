{
  "expo": {
    "name": "daily-spark-app",
    "slug": "daily-spark",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "remote-notification",
          "remote-notification"
        ],
        "ITSAppUsesNonExemptEncryption": false
      },
      "usesAppleSignIn": false,
      "bundleIdentifier": "com.ashdev87.dailyspark"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.ashdev87.dailyspark",
      "permissions": [
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "notification": {
        "icon": "./assets/splash-icon.png",
        "color": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "owner": "ashdev87",
    "plugins": [
      "expo-system-ui",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-4921191810059647~2308605110",
          "iosAppId": "ca-app-pub-4921191810059647~3731527689"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/splash-icon.png",
          "color": "#ffffff",
          "sounds": [],
          "mode": "development"
        }
      ],
      "expo-font"
    ],
    "extra": {
      "eas": {
        "projectId": "11d03376-e061-44a6-b8f1-7723864b8055"
      }
    }
  }
}
